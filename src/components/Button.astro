---
interface Props {
  title: string;
  type: "up" | "more";
  href: string;
}

const { title, type, href } = Astro.props;
---
<style lang="scss" scoped>
.btn {
  display: block;
  width: var(--btn-size);
  height: var(--btn-size);
  text-decoration: none;
  position: relative;

  &::before, &::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: contain;
  }
  &::before {
    background-image: url('assets/enso.png');
  }

  &--up {
    @keyframes up-movement {
        from {top:0;}
        to {top:clamp(-8px, -1vmin, -20px);}
    }
    &::after {
        background-image: url('assets/chevron.png');
    }
    &:focus,
    &:focus-visible,
    &:hover {
      &::after {
        animation: up-movement 0.5s ease-in-out infinite alternate;
      }
    }
  }

  &--more {
    @keyframes more-movement {
        from {top:-20%;}
        to {top:-10%;}
    }
    &::after {
        background-image: url('assets/chevron.png');
        transform: rotate(180deg);
        top: -20%;
    }
    &:focus,
    &:focus-visible,
    &:hover {
      &::after {
        animation: more-movement 0.5s ease-in-out infinite alternate;
      }
    }
  }
}
</style>

<a class={"btn btn--" + type} href={href} title={title} aria-label={title}>
</a>